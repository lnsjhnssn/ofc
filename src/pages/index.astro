---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomePosts from "../components/HomePosts.astro";
import ColorScript from "../components/ColorScript.astro";
import Tags from "../components/Tags.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

import getTags from "../scripts/getTags";

const posts = await getCollection("posts");
const sounds = await getCollection("sounds");
const tags = getTags([...posts, ...sounds]);
---

<!doctype html>
<html lang="en-us">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <!-- <h3 class="center">Réalisations récentes</h3> -->
      <HomePosts allPosts={[...posts, ...sounds]} />

      <br />

      <!-- <Tags tags={tags} all /> -->
      <h3>contact</h3>
      <a href="mailto:linus@trubbelstudio.ch">linus@trubbelstudio.ch</a>
    </main>
    <Footer />
    <ColorScript />
  </body>
</html>
